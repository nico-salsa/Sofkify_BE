# === CONFIGURACIÓN POSTGRESQL ===
# Credenciales compartidas por todos los servicios de BD
DB_USERNAME=sofkify
DB_PASSWORD=sofkify_secure_pass

# === USER SERVICE DATABASE ===
# Servicio de gestión de usuarios y autenticación
# Contenedor: postgres-users | Puerto Host: 5432
DB_HOST_USERS=postgres-users
DB_PORT_USERS=5432
DB_NAME_USERS=sofkify_users

# === PRODUCT SERVICE DATABASE ===
# Servicio de catálogo y gestión de inventario
# Contenedor: postgres-products | Puerto Host: 5433
DB_HOST_PRODUCTS=postgres-products
DB_PORT_PRODUCTS=5432
DB_NAME_PRODUCTS=sofkify_products_bd

# === CART SERVICE DATABASE ===
# Servicio de gestión de carritos de compra
# Contenedor: postgres-carts | Puerto Host: 5434
DB_HOST_CARTS=postgres-carts
DB_PORT_CARTS=5432
DB_NAME_CARTS=sofkify_cars_bd

# === ORDER SERVICE DATABASE ===
# Servicio de gestión del ciclo de vida de órdenes
# Contenedor: postgres-orders | Puerto Host: 5435
DB_HOST_ORDERS=postgres-orders
DB_PORT_ORDERS=5432
DB_NAME_ORDERS=sofkify_orders_bd

# === RABBITMQ CONFIGURATION ===
# Message broker para comunicación asíncrona entre microservicios
# Contenedor: rabbitmq
# Puerto AMQP: 5672 | Management UI: 15672
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# === MICROSERVICES PORTS (Internal, no cambiar a menos que sea necesario) ===
# User Service (Autenticación y gestión de usuarios)
# USER_SERVICE_PORT=8080

# Product Service (Catálogo e inventario)
# PRODUCT_SERVICE_PORT=8081

# Order Service (Gestión de órdenes)
# ORDER_SERVICE_PORT=8082

# Cart Service (Gestión de carritos)
# CART_SERVICE_PORT=8083
